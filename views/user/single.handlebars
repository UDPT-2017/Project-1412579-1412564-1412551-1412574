
	<!--start-breadcrumbs-->
	{{>product-breadcrumb}}
	<!--end-breadcrumbs-->
	<!--start-single-->
	<div class="single contact">
		<div class="container">
			<div class="single-main">
				<div class="col-md-9 single-main-left">
				<div class="sngl-top">
					<div class="col-md-5 single-top-left">	
						<div class="flexslider">
							<ul class="slides">
							{{#each image}}
								<li data-thumb="/product/{{image}}">
									<img src="/product/{{image}}" />
								</li>
							{{/each}}
							</ul>
						</div>
<!-- FlexSlider -->
  <script defer src="/js/jquery.flexslider.js"></script>
<link rel="stylesheet" href="/css/flexslider.css" type="text/css" media="screen" />

	<script>
// Can also be used with $(document).ready()
$(window).load(function() {
  $('.flexslider').flexslider({
    animation: "slide",
    controlNav: "thumbnails"
  });
});
</script>
				</div>	
				<div class="col-md-7 single-top-right" >
					<div class="details-left-info simpleCart_shelfItem">
						<h1>{{product.name}}</h1>
						<div class="price_single">
							<span class="reducedfrom"><h4>{{#tenPercent product.price}}{{/tenPercent}}</h4></span>
							Giá chỉ còn
							<span class="actual item_price"><h3 style="color:red">{{#fmNum product.price}}{{/fmNum}}</h3></span>
						</div>
						<h1 class="quick">Mô tả:</h1>
						<p class="quick_desc"> {{{product.description}}}</p>
					<div class="clearfix"> </div>
				<div class="single-but item_add">
					<input type="submit" value="add to cart"/>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="col-md-12" id="before" style="margin-top:20px;margin-bottom:20px;border: 1px solid;text-align:center">
				<h4>Sản phẩm cùng thương hiệu<h4>
	</div>
					<div class="latest products">
						<div class="product-one">

						{{#each random}}
							<div class="col-md-4 product-left single-left"> 
								<div class="p-one simpleCart_shelfItem">
									<a href="/san-pham/{{id}}-{{alias}}.html">
								<img src="/product/{{image}}" alt="" />
								<div class="mask mask1">
									<span>Xem ngay</span>
								</div></a>
									<h4>{{name}}</h4>
									<p><a class="item_add" href="#"><i></i> <span class=" item_price">{{#fmNum price}}{{/fmNum}}</span></a></p>		
								</div>
							</div>
						{{/each}}
							<div class="clearfix"> </div>
						</div>
					</div>
				</div>
				{{>rightside-product}}
				<div class="clearfix"> </div>
			</div>
		</div>
	</div>
	<!--end-single-->
	