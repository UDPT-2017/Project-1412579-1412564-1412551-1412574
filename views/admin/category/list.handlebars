
	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		{{#if message}}
		    <div class="alert alert-success">{{message}}</div>
		{{/if}}
		<div class="row">
			<div class="col-md-12">
					
					<div class="panel panel-primary" data-collapsed="0">
					
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
							
						</div>	

						<script type="text/javascript">
							jQuery( document ).ready( function( $ ) {
								var $table1 = jQuery( '#table-1' );
								
								// Initialize DataTable
								$table1.DataTable( {
									"aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
									"bStateSave": true
								});
								
							} );
							</script>
						
						<div class="panel-body">
						<table class="table table-bordered datatable" id="table-1">
							<thead>
								<tr>
									<th data-hide="phone">ID</th>
									<th>Tên danh mục</th>
									<th data-hide="phone">Ưu tiên</th>
									<th data-hide="phone,tablet">Hiện</th>
									<th>Thời gian cập nhật</th>
									<th>Thao tác</th>
								</tr>
							</thead>
							<tbody>
								<tr class="odd gradeX">
								{{#each list}}
									<td>{{id}}</td>
									<td>{{name}}</td>
									<td>{{orderb}}</td>
									<td class="center">
										{{#if hide}}
											<div class="make-switch" data-on="primary" data-off="info">
												<input type="hidden" id="id" value="{{id}}">
												<input type="checkbox" class="hide" name="checkbox" checked>
											</div>
										{{else}}
											<div class="make-switch" data-on="primary" data-off="info">
												<input type="hidden" id="id" value="{{id}}">
												<input type="checkbox" class="hide" name="checkbox">
											</div>
										{{/if}}
									</td>
									<td>{{updated_at}}</td>
									<td class="center">
										<a href="/admin/category/edit/{{id}}" class="btn btn-primary btn-sm btn-icon icon-left">
											<i class="entypo-pencil"></i>
											Sửa
										</a>
										
										<a href="javascript:void(0)" class="btn btn-danger btn-sm btn-icon icon-left deleteCate">
											<i class="entypo-cancel"></i>
											Xoá
										</a>
									</td>
								</tr>
								{{/each}}
							</tbody>
							<tfoot>
								<tr>
									<th data-hide="phone">ID</th>
									<th>Tên danh mục</th>
									<th data-hide="phone">Ưu tiên</th>
									<th data-hide="phone,tablet">Hiện</th>
									<th>Thời gian cập nhật</th>
									<th>Thao tác</th>
								</tr>
							</tfoot>
						</table>	

							
						</div>
				</div>
			</div>
		</div>
		<br />
		
		<!-- Footer -->
		<footer class="main">
			
			&copy; 2017 <strong>ROYAL SNEAKER</strong> Developed by <a href="" target="_blank">Một đống</a>
		
		</footer>
	</div>


	<script type="text/javascript">
		$(document).ready(function(){
			$('.deleteCate').click(function(){
				var id =$(this).parent().parent().find('input#id').val();
				var url ='/admin/category/delete';
				var target = $(this).parent().parent();
				$.ajax({
	                url: url,
	                type: 'POST',
	                cache: false,
	                data:{id:id},
	                success: function (data){
	                    if(data){
	                        target.remove();
	                    }
	                    else alert('Ajax không thành công!');
	                 }
	            });
			});
			$('div.alert').delay(5000).slideUp();
			$('input.hide').change(function() {
				var id =$(this).parent().parent().find('input#id').val();
				var hide;
				var url ='/admin/category/update-visible';
 				if(this.checked){
				    hide=1;
				}
				else{
				    hide=0;
				}
				$.ajax({
	                url: url,
	                type: 'POST',
	                cache: false,
	                data:{id:id,hide:hide},
	                success: function (data){
	                    if(data){
	                        console.log(data);
	                    }
	                    else alert('Ajax không thành công!');
	                 }
	            });
			});
		});	
	</script>


		


