

	<style>
	    .icon_del {position: relative; left: -4%}
	</style>

	<div class="main-content">
				
		{{>header-admin}}
		
		<hr />
		{{>breadcrum}}
		<h2>{{title}}</h2>
		<form method="post" enctype="multipart/form-data" action="" id="addcate" class="form-horizontal form-groups-bordered">
		<div class="row">
			<div class="col-md-8">
					
					<div class="panel panel-primary" data-collapsed="0">
						<div class="panel-heading">
							<div class="panel-title">
								{{title}}
							</div>
						</div>
						
						<div class="panel-body">
		

								<div class="form-group">
									<label class="col-sm-3 control-label">Ảnh hiện tại (tỷ lệ: 1903x952)</label>
									{{#if slider.image}}
									<div>
										<input type="hidden" name="id"  id="id" value="{{slider.id}}">
										<img src="/images/{{slider.image}}"  style="width: 400px; height: auto;margin-left:15px;" alt="">
										<a href="javascript:void(0)" type="button" onclick="return xacnhanxoa('Bạn có chắc chắn muốn xoá hình này?')" class="btn btn-danger btn-circle icon_del del_img" href=""><i class="fa fa-times"></i>X</a>
									</div>
									{{else}}
									<input type="hidden" name="id"  id="id" value="{{slider.id}}">
									<div style="margin-left:15px;" class="fileinput fileinput-new" data-provides="fileinput">
										<div class="fileinput-new thumbnail" style="width: 400px; height: 200px;" data-trigger="fileinput">
											<img src="http://placehold.it/400x20	0" alt="">
										</div>
										<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 400px; max-height: 200px"></div>
										<div>
											<span class="btn btn-white btn-file">
												<span class="fileinput-new">Chọn ảnh</span>
												<span class="fileinput-exists">Thay đổi</span>
												<input type="file" name="slider" accept="image/*">
											</span>
											<a href="#" class="btn btn-orange fileinput-exists" data-dismiss="fileinput">Xoá</a>
										</div>
									</div>
									{{/if}}
								</div>


														
						</div>
					</div>
			</div>

			<div class="form-group">	
				<div class="col-sm-8" style="text-align: center;">
		
					<div class="bs-example">	
						<button type="submit" class="btn btn-green btn-icon">
							Sửa slider<i class="entypo-check"></i>
						</button>
					</div>
					
				</div>
			</div>	
			</form>
		</div>
		
		<br />

		<!-- Footer -->
		{{>footer-admin}}
	</div>

	<script type="text/javascript">
		$(document).ready(function(){
			$('.del_img').click(function(){
				var id =$(this).parent().find('input#id').val();
				var url ='/admin/slider/delete-img';
				var target = $(this).parent();
				var targetAppend = target.parent();
				console.log(id);
				var append = '<div style="margin-left:15px;" class="fileinput fileinput-new" data-provides="fileinput"><div class="fileinput-new thumbnail" style="width: 400px; height: 200px;" data-trigger="fileinput"><img src="http://placehold.it/400x200" alt=""></div><div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 400px; max-height: 200px"></div><div><span class="btn btn-white btn-file"><span class="fileinput-new">Chọn ảnh</span><span class="fileinput-exists">Thay đổi</span><input type="file" name="imgdetail" accept="image/*"></span><a href="#" class="btn btn-orange fileinput-exists" data-dismiss="fileinput">Xoá</a></div></div>';

				$.ajax({
            url: url,
            type: 'POST',
            cache: false,
            data:{id:id},
            success: function (data){
                if(data){
                    target.remove();
                    targetAppend.append(append);
                }
                else alert('Ajax không thành công!');
             }
        });
				
			});
		});	
	</script>

		


